<link rel="stylesheet" href="{{ 'custom-icon-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'custom-icon-with-text.css' | asset_url | stylesheet_tag }}</noscript>
{%- style -%}
  .section--{{ section.id }} {
    background: {{ section.settings.background }};
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 990px) {
    .section--{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{% if section.blocks.size > 0 %}
    <div class="icon-with-text section--{{ section.id }}">
        <div class="page-width">
            <div class="icon-with-text-list">
                {% for block in section.blocks %}
                    {% assign item = block.settings %}
                    <div class="icon-with-text-item animation-mode" data-duration="{{ forloop.index }}">
                        {% if item.icon != blank %}
                            <div class="icon-with-text__icon">
                                {{ item.icon }}
                            </div>
                        {% endif %}
                        {% if item.text != blank %}
                            <div class="icon-with-text__text rte">
                                {{ item.text }}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
{% schema %}
{
    "name": "Icon with text",
    "class": "section",
    "tag": "section",
    "settings": [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#f4f6fc"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Mobile Top Padding",
            "default": 36
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Mobile Bottom Padding",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Item",
            "settings": [
                {
                    "type": "html",
                    "id": "icon",
                    "label": "Icon"
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Icon with text"
        }
    ]
}
{% endschema %}