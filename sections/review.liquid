<link rel="stylesheet" href="{{ 'custom-review.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'custom-review.css' | asset_url | stylesheet_tag }}</noscript>
{%- style -%}
  .section--{{ section.id }} {
    background-color: {{ section.settings.back_color }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="review section--{{ section.id }}">
    <div class="page-width section-{{ section.id }}-padding">
        {% if section.settings.title != blank %}
            <div class="review__title">
                <h2>{{ section.settings.title }}</h2>
            </div>
        {% endif %}
        {% if section.settings.btn_label != blank and section.settings.btn_link != blank %}
            <div class="review__button">
                <a class="button button--primary" href="{{ section.settings.btn_link }}">
                    {{ section.settings.btn_label }}
                </a>
            </div>
        {% endif %}
        {% if section.settings.star != blank %}
            <div class="review__star">
                {{ section.settings.star | img_url: '250x' | img_tag }}
            </div>
        {% endif %}
        {% if section.settings.description != blank %}
            <div class="review__description">
                {{ section.settings.description }}
            </div>
        {% endif %}
    </div>
</div>
{% schema %}
{
    "name": "Review",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        },
        {
            "type": "image_picker",
            "id": "star",
            "label": "Star"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 160,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 160,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Mobile Top Padding",
            "default": 36
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Mobile Bottom Padding",
            "default": 36
        },
        {
            "type": "color",
            "id": "back_color",
            "label": "Background",
            "default": "#FFFFFF"
        }
    ],
    "presets": [
        {
            "name": "Review"
        }
    ]
}
{% endschema %}